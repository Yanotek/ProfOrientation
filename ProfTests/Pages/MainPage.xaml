<Page x:Class="ProfTests.Pages.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ProfTests.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainPage">
    <Page.Resources>
        <Style TargetType="Border">
            <Setter Property="CornerRadius" Value="3"/>
        </Style>
    </Page.Resources>
    
    <Grid>
        <StackPanel Margin="10">
            <Button Style="{StaticResource ButtonStyle}" Content="Старшая школа" 
                    Click="ThirtMethodClick" Width="300" Height="100" Margin="10"/>
            <Button Style="{StaticResource ButtonStyle}" Content="Средняя школа" 
                    Click="SecondMethodClick" Width="300" Height="100" Margin="10"/>
            <Button Style="{StaticResource ButtonStyle}" Content="Начальная школа" 
                    Click="FirstMethodClick" Width="300" Height="100" Margin="10"/>
        </StackPanel>
    </Grid>
</Page>
