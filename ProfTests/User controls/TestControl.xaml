<UserControl x:Class="ProfTests.User_controls.TestControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ProfTests.User_controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Name="mainForm">
    <StackPanel>
        <TextBlock FontSize="20" Text="{Binding SelectedQuestion.Text}" HorizontalAlignment="Center" 
                       Margin="10" TextWrapping="Wrap" TextAlignment="Center"/>
        <ItemsControl ItemsSource="{Binding SelectedQuestion.Answers}" BorderThickness="0">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <RadioButton GroupName="{Binding ElementName=mainForm, Path=DataContext.SelectedQuestion.Text}" VerticalContentAlignment="Center" 
                                         IsChecked="{Binding IsSelected}" Template="{DynamicResource RadioButtonControlTemplate}" Checked="SetGreen">
                        <TextBlock FontSize="17" Text="{Binding Text}" VerticalAlignment="Center"/>
                    </RadioButton>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </StackPanel>
</UserControl>